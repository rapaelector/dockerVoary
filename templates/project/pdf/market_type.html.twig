{% trans_default_domain 'project' %}

{% from pdf_macro import pdf_checkbox %}

{# market type height count = 12 #}
{% set MARKET_TYPE_HEIGHT = 24 %}
{% set LABEL_HEIGHT = space_value(2, MARKET_TYPE_HEIGHT, COL_PX_H_SIZE) %}
{# market type col count = 30 #}
{% set MARKET_TYPE_COL_COUNT = 60 %}
{% set CHECKBOX_COL_WIDTH = space_value(2, MARKET_TYPE_COL_COUNT)  %}
{% set LABEL_COL_WIDTH = space_value((MARKET_TYPE_COL_COUNT - 2), MARKET_TYPE_COL_COUNT) /  2 %}

<table class="table-borderless market-type-table">
    <tbody>
        <tr>
            <td colspan="4" class="text-center">
                <div class="label market-type-title">{{ 'pdf.label.market_type'|trans }}</div>
            </td>
        </tr>
        <tr>
            <td width="{{ CHECKBOX_COL_WIDTH }}%;" class="market-type-checkbox">{{ pdf_checkbox(false) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.work_on_existing'|trans }}</td>
            <td width="{{ CHECKBOX_COL_WIDTH }}%;" class="market-type-checkbox">{{ pdf_checkbox(false) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.tce'|trans }}</td>
        </tr>
        <tr>
            <td width="{{ CHECKBOX_COL_WIDTH }}%;" class="market-type-checkbox">{{ pdf_checkbox(false) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.new_building'|trans }}</td>
            <td width="{{ CHECKBOX_COL_WIDTH }}%;" class="market-type-checkbox">{{ pdf_checkbox(false) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.agricultural_building'|trans }}</td>
        </tr>
        <tr>
            <td width="{{ CHECKBOX_COL_WIDTH }}%;" class="market-type-checkbox">{{ pdf_checkbox(true) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.shade_houses'|trans }}</td>
            <td width="{{ CHECKBOX_COL_WIDTH }}%;" class="market-type-checkbox">{{ pdf_checkbox(false) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.call_for_tenders'|trans }}</td>
        </tr>
        <tr>
            <td width="{{ CHECKBOX_COL_WIDTH }}%;" class="market-type-checkbox">{{ pdf_checkbox(true) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.isothermal_plan'|trans }}</td>
            <td width="{{ CHECKBOX_COL_WIDTH }}%;" class="market-type-checkbox">{{ pdf_checkbox(false) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.simple_supply'|trans }}</td>
        </tr>
        <tr>
            <td width="{{ CHECKBOX_COL_WIDTH }}" class="market-type-checkbox">{{ pdf_checkbox(false) }}</td>
            <td width="{{ LABEL_COL_WIDTH }}%;" height="{{ LABEL_HEIGHT }}px;">{{ 'pdf.label.market_type_label.asbestos_removal'|trans }}</td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>