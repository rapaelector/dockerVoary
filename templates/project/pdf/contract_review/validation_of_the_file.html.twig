{% trans_default_domain 'projects' %}

{% from pdf_macro import pdf_checkbox %}

{% set COL_COUNT = 120 %}
{# checkbox col count 1 #}
{% set CHECKBOX_WIDTH = space_value(2, COL_COUNT) %}
{# checkbox label count is the rest of col_count - checkbox col count #}
{% set CHECKBOX_LABEL = space_value((120 - 2), COL_COUNT) %}

{% set value = value|default(null) %}

<table class="table-borderless">
    <tbody>
        <tr>
            <td colspan="2" class="label">{{ 'pdf.label.file_validation_disa_within'|trans }} :</td>
        </tr>
        {% for item in constant('\\App\\Entity\\Constants\\Project::TYPE_DISA_SHEET') %}    
            <tr>
                <td width="{{ CHECKBOX_WIDTH }}%;">{{ pdf_checkbox(item in value) }}</td>
                {# <td width="{{ CHECKBOX_LABEL }}%;" class="p-0">{{ 'pdf.file_validation_disa_label.mde_quote_signed'|trans }}</td> #}
                <td width="{{ CHECKBOX_LABEL }}%;" class="p-0">{{ item|trans({}, 'project') }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>