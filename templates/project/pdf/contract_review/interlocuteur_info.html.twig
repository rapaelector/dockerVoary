{% trans_default_domain 'projects' %}

{# height col count 7 #}
{% set INTERLOCUTEUR_INFO_HEIGHT_COUNT = 14 %}
{% set INTERLOCUTEUR_INFO_HEIGHT_FIXER = 0.8 %}
{# interlocutor name col height count 3 #}
{% set INTERLOCUTOR_NAME_HEIGHT = space_value(6, INTERLOCUTEUR_INFO_HEIGHT_COUNT, INTERLOCUTEUR_INFO_HEIGHT_FIXER) %}
{# mail col height count 2 #}
{% set MAIL_HEIGHT = space_value(4, INTERLOCUTEUR_INFO_HEIGHT_COUNT, INTERLOCUTEUR_INFO_HEIGHT_FIXER) %}
{# tel col height count 2 #}
{% set TEL_HEIGHT = space_value(4, INTERLOCUTEUR_INFO_HEIGHT_COUNT, INTERLOCUTEUR_INFO_HEIGHT_FIXER) %}

{% set labelClass = 'text-weight-bold text-underline' %}
{% set contact = resolve([project, 'contact'], null) %}
{% set contactName = resolve([contact, 'name'], null) %}
{% set contactEmail = resolve([contact, 'email'], null) %}
{% set contactTel = resolve([contact, 'phone'], null) %}

<table class="table-borderless">
    <tbody>
        <tr>
            <td height="{{ INTERLOCUTOR_NAME_HEIGHT }}px;" class="align-start">
                <span class="{{ labelClass }}">{{ 'pdf.contract_review_label.interlocutor_name'|trans }}:</span>
                <span>{{ contactName }}</span>
            </td>
        </tr>
        <tr>
            <td height="{{ MAIL_HEIGHT }}px;" class="align-start">
                <span class="{{ labelClass }}">{{ 'pdf.label.mail'|trans }}:</span>
                <span>{{ contactEmail }}</span>
            </td>
        </tr>
        <tr>
            <td height="{{ TEL_HEIGHT }}px;">
                <span class="{{ labelClass }}">{{ 'pdf.label.tel'|trans }}:</span>
                <span>{{ contactTel }}</span>
            </td>
        </tr>
    </tbody>
</table>