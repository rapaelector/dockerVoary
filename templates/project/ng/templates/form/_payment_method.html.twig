	</div>
	<!-- /.card-header for interlocuteur -->
	<div class="card-body">
		<div class="row">
			<div class="col-sm-3">
				<fieldset class="form-group">
					<legend class="col-form-label required">Acompte</legend>
					<div class="project-paymentChoice">
						<div class="row">
							<div class="col-sm-6">
								<input
