<div class="card card card-outline card-app-secondary h-100">
	<div class="card-header">
		<h3 class="card-title">Adresse chantier</h3>
		<!-- /.card-tools -->
	</div>
	<!-- /.card-header for interlocuteur -->
	<div class="card-body">
		<div class="row">
			<div class="col-sm-12">
				<div class="form-group">
					<label for="project_edit_siteAddress_name">Nom</label>
					<input type="text" ng-model="project.siteAddress.name" name="project_edit[siteAddress][name]" class="form-control" value="Test adresse chantier"></div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="project_edit_siteAddress_phone">Téléphone</label>
					<input type="text" ng-model="project.siteAddress.phone" name="project_edit[siteAddress][phone]" class="form-control" value="899 00 789"></div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="project_edit_siteAddress_fax">Fax</label>
					<input type="text" ng-model="project.siteAddress.fax" name="project_edit[siteAddress][fax]" class="form-control" value="787 78 608"></div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="project_edit_siteAddress_line1">Adresse 1</label>
					<input type="text" ng-model="project.siteAddress.line1" name="project_edit[siteAddress][line1]" class="form-control" value="Antananarivo"></div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="project_edit_siteAddress_line2">Adresse 2</label>
					<input type="text" ng-model="project.siteAddress.line2" name="project_edit[siteAddress][line2]" class="form-control" value="Antsimondrano"></div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="project_edit_siteAddress_line3">Adresse 3</label>
					<input type="text" ng-model="project.siteAddress.line3" name="project_edit[siteAddress][line3]" class="form-control" value="Itaosy"></div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="project_edit_siteAddress_postalCode">Code postale</label>
					<input type="text" ng-model="project.siteAddress.postalCode" name="project_edit[siteAddress][postalCode]" class="form-control"></div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="project_edit_siteAddress_city">Ville</label>
					<input type="text" ng-model="project.siteAddress.city" name="project_edit[siteAddress][city]" class="form-control" value="Centre afrique"></div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label class="" for="project_edit_siteAddress_country">Pays</label>
					<md-select
						ng-model="project.siteAddress.country"
						md-on-close="searchTerm.countries = ''"
						data-md-container-class="selectHeader"
						md-on-open="helpers.getCountries"
						ng-change="helpers.handleCountriesChanged()"
					>
						<md-select-header class="select-header-search">
							<input ng-model="searchTerm.countries"
								placeholder="Rechercher" 
								type="search"
								ng-keydown="$event.stopPropagation()"
								class="demo-header-searchbox md-text"
							>
						</md-select-header>
						<md-option
							ng-value="country.countryCode" 
							ng-repeat="country in data.autoComplete.countries|filter:searchTerm.countries">
							{{ '{{ country.name }}' }}
						</md-option>
					</md-select>
				</div>
			</div>
		</div>
	</div>
	<!-- /.card-body -->
</div>
