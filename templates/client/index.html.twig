{% trans_default_domain 'client' %}

{% extends 'client/layout.html.twig' %}

{% block title %}{{ parent() }} | {{ 'title.list'|trans }}{% endblock %}

{% block body_attr %}class="sidebar-mini layout-fixed layout-navbar-fixed sidebar-collapse" style="height: auto;"{% endblock %}

{% block content_header %}
    {% embed 'layout/content/_content_header.html.twig' with {
        title: 'title.list'|trans,
        links: [],
    } %}
        {% block header_links %}
            <a href="{{ path('client.new') }}" data-toggle="tooltip" data-placement="bottom" title="{{ 'title.add_prospect'|trans({}, 'client') }}">
                <i class="material-icons">add</i>
            </a>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                {% include template_datatable_filters with {
                    datatable: datatable
                } %}
                <div id="{{ datatable.tableId }}">Chargement...</div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            window.App.DataTable.initAppDataTables({
                columnNames: [
                    'client_number', 'client_name', 'client_postal_code', 'client_country',
                    'client_activity', 'client_created_at', 'actions'
                ],
                excludedColumns: [6],
                containerSelector: '#{{ datatable.tableId }}',
                filtersContainerSelector: '#{{ datatable.tableFiltersId }}',
                columnsCount: {{ datatable.columns|length }},
                settings: {{ datatable_settings(datatable)|raw }},
                debug: true,
                enableFormatter: true,
                redrawEvent: 'client.deleted',
            })
        });
    </script>
{% endblock %}
