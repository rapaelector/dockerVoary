{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <h3 class="mb-0 text-app-primary">{{ 'title.contacts'|trans({}, 'client') }}</h3>
            {{ form_row(form.contacts) }}
            <div id="add-button-container"></div>
        </div>
        <div class="col-md-6">
            <div class="card card card-outline card-app-secondary h-100">
                <div class="card-header">
                    <h3 class="card-title">{{ 'title.business'|trans({}, 'client') }}</h3>
                <!-- /.card-tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-7">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="w-100"></div>
                        <div class="col-sm-7">
                            {{ form_row(form.shortName) }}
                        </div>
                        <div class="col-sm-5">
                            {{ form_row(form.clientNumber) }}
                        </div>
                        <div class="col-sm-12">
                            {{ form_row(form.activity) }}
                        </div>
                        {#
                            # https://suivi.espai-web.com/tache/4892%20%20data-toggle=
                            # Dans la PJ (Toute cette partie ne présente pas de grand intérêt à ce stade de la prise de renseignement)
                        <div class="col-sm-6">
                            {{ form_row(form.paymentMethod) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.payment) }}
                        </div>
                        <div class="col-sm-12">
                            {{ form_row(form.siret) }}
                        </div>
                        <div class="col-sm-12 col-md-6">
                            {{ form_row(form.tvaRate) }}
                        </div>
                        <div class="col-sm-12 col-md-6">
                            {{ form_row(form.intraCommunityTva) }}
                        </div>
                        #}
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        <div class="col-md-6 mt-3 mt-md-3">
            <div class="card card card-outline card-app-secondary h-100">
                <div class="card-header">
                    <h3 class="card-title">{{ 'title.business_billing_address'|trans({}, 'client') }}</h3>
                <!-- /.card-tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {% include 'address/_form_address.template.twig' with {'form': form.billingAddress} %}
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>

    <div class="text-center py-3">
        <button class="btn btn-app-primary" type="submit">{{ button_label|default('action.save'|trans({}, 'messages')) }}</button>
    </div>
{{ form_end(form) }}
