{% trans_default_domain 'users' %}

{% extends 'user/layout.html.twig' %}

{% block title %}{{ parent() }} | {{ 'title.user_list'|trans }}{% endblock %}

{% block content_header %}
    {% include 'layout/content/_content_header.html.twig' with {
        title: 'menu.users'|trans([], 'messages'),
        links: [
            {label: 'title.home'|trans, routeName: 'home'},
            {label: 'title.user_list'|trans },
        ],
    } %}
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="text-right">
            <a href="{{ path('user.new') }}" data-toggle="tooltip" data-placement="bottom" title="{{ 'title.add_user'|trans }}">
                <i class="material-icons">add</i>
            </a>
        </div>
        <div class="row">
            <div class="col-12">
                {% include template_datatable_filters with {
                    datatable: datatable
                } %}
                <div id="{{ datatable.tableId }}">Chargement...</div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            window.App.DataTable.initAppDataTables({
                columnNames: [
                    'user_email', 'user_firstName', 'user_lastName', 
                    'user_phone', 'user_job', 'user_fax', 'created_at',
                    'updated_at', 'deleted_at', 'actions'
                ],
                containerSelector: '#{{ datatable.tableId }}',
                filtersContainerSelector: '#{{ datatable.tableFiltersId }}',
                excludedColumns: [],
                config: {
                    dom: `
                        <'card app-dt-card'
                            <'card-header'<'row'<'col-sm-6'l><'col-sm-6'f>>>
                            <'card-body'<'row'<'col-sm-12 mt-table'<''tr>>>>
                            <'card-footer'<'row mt-3'<'col-sm-5'i><'col-sm-7'p>>>
                        >
                    `,
                    fixedColumns: {
                        rightColumns: 1,
                        leftColumns: 0,
                    },
                    fixedHeader: true,
                },
                columnsCount: {{ datatable.columns|length }},
                settings: {{ datatable_settings(datatable)|raw }},
                debug: true,
                enableFormatter: true,
            });
        });
    </script>
{% endblock %}

