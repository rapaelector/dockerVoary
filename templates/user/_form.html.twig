{{ form_start(form) }}
    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.lastName) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.firstName) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.password) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.phone) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.job) }}
        </div>
    </div>
    <div class="text-center mt-2">
        <button class="btn btn-sm btn-default">{{ button_label|default('action.save'|trans([], 'messages')) }}</button>
    </div>
{{ form_end(form) }}
