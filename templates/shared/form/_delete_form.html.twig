{% if options is not defined %}{% set options = {} %}{% endif %}

<form class="{{ resolve([options, 'attr', 'class'], 'd-inline-block w-100 p-0') }}" method="post"
	action="{{ deleteAction }}" data-confirm="true" data-confirm-title="{{ confirm.title }}"
	data-confirm-html="{{ confirm.html }}" {% if confirm.input is defined %} data-confirm-input="{{ confirm.input }}"
	{% endif %}>
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ token }}">
	<button class="{{ resolve([options, 'button_attr', 'class'], 'dropdown-item') }}">
		{% if resolve([options, 'show_icon'], true) %}
		<span
			class="{{ resolve([options, 'icon_attr', 'class'], 'material-icons') }}">{{ resolve([options, 'icon'], 'delete') }}</span>
		{% endif %}
		{% if not resolve([options, 'label'], false) %}
		{{ resolve([options, 'label'], 'action.delete')|trans(resolve([options, 'label_trans_params'], []), resolve([options, 'label_trans_domain'], 'messages'), resolve([options, 'label_trans_locale'], null)) }}
		{% endif %}
	</button>
</form>