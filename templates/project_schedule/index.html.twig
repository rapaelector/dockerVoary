    ng-controller="projectScheduleController"
{% endblock %}


{% block content %}
    <div class="container-fluid">
        <app-scheduler ressources="data.ressources"></app-scheduler>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_project_schedule') }}
{% endblock %}

